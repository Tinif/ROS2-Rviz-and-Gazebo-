<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <material name="blue">
        <color rgba="0 0 0.5 1" />
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.5 0 1" />
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1" />
    </material>


    <xacro:macro name="box_inertia" params="m l w h xyz rpy">

        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}"/>
            <inertia ixx="${(m/12)*((h*h)+(l*l))}" ixy="0" ixz="0"
                    iyy="${(m/12)*((w*w)+(l*l))}" iyz="0"
                    izz="${(m/12)*((w*w)+(h*h))}"/>
        </inertial>
    
    </xacro:macro>

    <xacro:macro name="wheel_inertia" params="m xyz rpy r h">

        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}"/>
            <inertia ixx="${(m/12)*((3*r*r)+(h*h))}" ixy="0" ixz="0"
                    iyy="${(m/12)*((3*r*r)+(h*h))}" iyz="0"
                    izz="${(m*r*r)/2}"/>
        </inertial>
    
    </xacro:macro>

    <xacro:macro name="caster_inertia" params="m xyz rpy r">

        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}"/>
            <inertia ixx="${(2*m*r*r)/5}" ixy="0" ixz="0"
                    iyy="${(2*m*r*r)/5}" iyz="0"
                    izz="${(2*m*r*r)/5}"/>
        </inertial>
    
    </xacro:macro>
    
</robot>